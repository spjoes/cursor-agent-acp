{
  "name": "@blowmage/cursor-agent-acp",
  "version": "0.5.0",
  "description": "Production-ready Agent Client Protocol (ACP) adapter for Cursor CLI with comprehensive tool system, security framework, and seamless AI-powered coding assistance in ACP-compliant editors like Zed",
  "main": "dist/index.js",
  "bin": {
    "cursor-agent-acp": "dist/bin/cursor-agent-acp.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "ci": "npm run test && npm run test:integration && npm run lint && npm run format",
    "fix": "npm run lint:fix && npm run format:fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:no-coverage": "jest --passWithNoTests --coverage=false",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:all": "npm run test && npm run test:integration",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "format": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build && npm run ci",
    "dev": "tsx src/bin/cursor-agent-acp.ts",
    "start": "node dist/bin/cursor-agent-acp.js",
    "example:complete": "tsx examples/complete-integration.ts",
    "example:build": "npm run build && node dist/examples/complete-integration.js"
  },
  "keywords": [
    "acp",
    "agent-client-protocol",
    "cursor",
    "cursor-cli",
    "ai",
    "coding-assistant",
    "editor",
    "zed",
    "neovim",
    "typescript",
    "llm",
    "agent",
    "tools"
  ],
  "author": "Mike Moore <blowmage@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blowmage/cursor-agent-acp.git"
  },
  "bugs": {
    "url": "https://github.com/blowmage/cursor-agent-acp/issues"
  },
  "homepage": "https://github.com/blowmage/cursor-agent-acp#readme",
  "engines": {
    "node": ">=18.14.0"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.5.1",
    "commander": "^14.0.2",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@jest/test-sequencer": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.1",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "cursor-agent": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "cursor-agent": {
      "optional": false
    }
  }
}
